<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutField"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/notesGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:background="@color/transparent"
        android:rowCount="3">

        <TextView
            android:id="@+id/tv0"
            android:layout_row="0"
            android:layout_column="0"
            android:text="1"
            style="@style/NotesStyle"/>

        <TextView
            android:id="@+id/tv1"
            android:layout_row="0"
            android:layout_column="1"
            android:text="2"
            style="@style/NotesStyle"/>

        <TextView
            android:id="@+id/tv2"
            android:layout_row="0"
            android:layout_column="2"
            android:text="3"
            style="@style/NotesStyle"/>

        <TextView
            android:id="@+id/tv3"
            android:layout_row="1"
            android:layout_column="0"
            android:text="4"
            style="@style/NotesStyle"/>

        <TextView
            android:id="@+id/tv4"
            android:layout_row="1"
            android:layout_column="1"
            android:text="5"
            style="@style/NotesStyle"/>

        <TextView
            android:id="@+id/tv5"
            android:layout_row="1"
            android:layout_column="2"
            android:text="6"
            style="@style/NotesStyle"/>

        <TextView
            android:id="@+id/tv6"
            android:layout_row="2"
            android:layout_column="0"
            android:text="7"
            style="@style/NotesStyle"/>

        <TextView
            android:id="@+id/tv7"
            android:layout_row="2"
            android:layout_column="1"
            android:text="8"
            style="@style/NotesStyle"/>

        <TextView
            android:id="@+id/tv8"
            android:layout_row="2"
            android:layout_column="2"
            android:text="9"
            style="@style/NotesStyle"/>

    </GridLayout>

    <TextView
        android:id="@+id/numberView"
        style="@style/SudokuNumberStyle" />

</RelativeLayout>
