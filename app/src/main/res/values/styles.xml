<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/gray</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:statusBarColor">@color/yellow</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:itemTextAppearance">@style/PopupMenuStyle</item>
    </style>

    <!-- Popup Menu -->
    <style name="PopupMenuStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Splash Screen -->
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@color/yellow</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/yellow</item>
    </style>

    <!-- Keyboard Style -->
    <style name="KeyboardNumberButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/keyboardNumberText</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="KeyboardButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/_1sdp</item>
        <item name="android:textSize">@dimen/keyboardFunctionalText</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground">@drawable/box</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Sudoku Style -->
    <style name="NotesStyle" parent="@style/Base.TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/fieldNotesText</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="SudokuNumberStyle" parent="@style/Base.TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/fieldNumberText</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- NewGame Style -->
    <style name="Theme.Transparent" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Statistics Styles -->
    <style name="Statistics.Title.Small" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/general_text_title_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- Settings Styles -->
    <style name="SettingsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:layout_marginRight">@dimen/_15sdp</item>
        <item name="android:layout_marginLeft">@dimen/_15sdp</item>
    </style>

    <style name="SettingsCheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:buttonTint">@color/black</item>
        <item name="android:layout_marginLeft">@dimen/_6sdp</item>
    </style>

    <style name="Settings.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="Settings.Info" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/darkdarkgray</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <!-- General Styles -->
    <style name="General.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/general_text_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="General.ToolBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/yellow</item>
        <item name="android:navigationIcon">@drawable/ic_back</item>
        <item name="android:titleTextColor">@color/black</item>
    </style>

    <style name="General.Title.Small" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/general_text_title_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="General.Info" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/general_text_info</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">italic</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="General.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:foreground">@drawable/box</item>
        <item name="android:layout_margin">@dimen/_1sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>
